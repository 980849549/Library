<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CoobyAppBaseTheme.Trans">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <!--menudialog-->
    <style name="dialogAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!--loaddialog-->
    <style name="dlg_loading" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowEnterAnimation">@anim/alpha_gradual_change_in</item>
        <item name="android:windowExitAnimation">@anim/alpha_gradual_change_out</item>
    </style>

    <style name="base_large_progressbar_style">
        <item name="android:maxWidth">38.0dip</item>
        <item name="android:maxHeight">38.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/base_loading_large_anim</item>
        <item name="android:minWidth">38.0dip</item>
        <item name="android:minHeight">38.0dip</item>
    </style>
</resources>