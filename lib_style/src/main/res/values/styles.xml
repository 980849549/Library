<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--toolbar样式-->
    <style name="CoobyAppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="btn_left_bg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selectable_background_cooby_news</item>
    </style>

    <style name="base_actionbar_style" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="actionBarStyle">@style/ClubActionbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/base_bg_actionbar</item>
        <item name="android:actionBarSize">40dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="ClubActionbar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="height">40dp</item>
    </style>

    <style name="ActionBarArrow">
        <item name="android:background">@drawable/selectable_background_cooby_news</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:src">@drawable/base_action_bar_back</item>
    </style>

    <style name="head_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/p_bg_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="btn_right_bg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">right|center</item>
        <!--<item name="android:background">@drawable/selectable_background_cooby_news</item>-->
        <item name="android:src">@drawable/base_action_bar_share</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="base_small_progressbar_style">
        <item name="android:maxWidth">18.0dip</item>
        <item name="android:maxHeight">18.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/base_loading_small_anim</item>
        <item name="android:minWidth">18.0dip</item>
        <item name="android:minHeight">18.0dip</item>
    </style>
    <style name="DayTheme" parent="CoobyAppBaseTheme">
        <item name="ctbackground">@color/dayBackground</item>
        <item name="ctbackgroundDrawable">@android:color/white</item>
        <item name="cttextColor">@color/dayTextColor</item>
        <item name="ctItemBackground">@color/dayItemBackground</item>

    </style>

    <style name="NightTheme" parent="CoobyAppBaseTheme">
        <item name="ctbackground">@color/nightBackground</item>
        <item name="ctbackgroundDrawable">@color/nightBackground</item>
        <item name="cttextColor">@color/nightTextColor</item>
        <item name="ctItemBackground">@color/nightItemBackground</item>
    </style>

    <style name="base_large_progressbar_style">
        <item name="android:maxWidth">38.0dip</item>
        <item name="android:maxHeight">38.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/base_loading_large_anim</item>
        <item name="android:minWidth">38.0dip</item>
        <item name="android:minHeight">38.0dip</item>
    </style>
</resources>