<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_action_lin"
    style="@style/base_actionbar_style">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/action_bar_back"
            style="@style/ActionBarArrow"
            android:padding="10dip" />

        <Button
            android:id="@+id/btn_left1"
            style="@style/btn_left_bg"
            android:paddingLeft="10dip"
            android:paddingRight="15dip"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/head_title"
        style="@style/head_title"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="right|center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search"
            style="@style/btn_right_bg"
            android:paddingLeft="10dip"
            android:paddingRight="15dip"
            android:src="@drawable/base_search_btn_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/publish"
            style="@style/btn_right_bg"
            android:paddingLeft="10dip"
            android:paddingRight="15dip"
            android:src="@drawable/base_edit_btn_icon"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_send"
            style="@style/btn_right_bg"
            android:paddingRight="10dip"
            android:text="提交"
            android:textColor="@color/p_bg_color"
            android:textSize="18sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/share"
            style="@style/btn_right_bg"
            android:paddingLeft="10dip"
            android:paddingRight="15dip"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/actionbar_submit"
            style="@style/btn_right_bg"
            android:paddingLeft="10dip"
            android:paddingRight="15dip"
            android:src="@drawable/base_action_bar_submit"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>